{% extends 'base.html.twig' %}

{% block title %}Recipe - Modification de l'ingredient
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modification de l'ingr√©dient</h1>

        <form action="#" name="ingredient" method="post">
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                <div class="form-error">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                <div class="form-error">
                    {{ form_errors(form.price) }}
                </div>
            </div>

            {{ form_row(form._token) }}

            <button type="submit" id="ingredient_submit" name="ingredient[submit]" class="btn btn-primary mt-4">
                Modifier mon ingredient
            </button>
        </form>
    </div>
{% endblock %}